    {% block main %}{% endblock %}
</div>

{% block javascript %}
<script>
$(document).ready (function () {

    popover ();
    tooltip ();
});

$(window).resize (function () {

    $('[data-toggle="popover"]').popover ('hide');
    $('[data-toggle="tooltip"]').tooltip ('hide');
});


function popover () {

    $('[data-toggle="popover"]').popover({
        trigger:    'focus',
        placement:  'top',
        container:  'body',
        html:       true
    });
}

function tooltip () {

    $('[data-toggle="tooltip"]').tooltip ({
        trigger:    'click',
        placement:  'top',
        html:       false
    }).tooltip ('show');
}
</script>
{% endblock %}

