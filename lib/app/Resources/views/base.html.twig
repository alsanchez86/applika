function popover () {

    $('[data-toggle="popover"]').popover({
        trigger:    'focus',
        placement:  'top',
        container:  'body',
        html:       true
    });
}

function tooltip () {

    $('[data-toggle="tooltip"]').tooltip ({
        trigger:    'click',
        placement:  'top',
        html:       false
    }).tooltip ('show');
}

function responsive () {

    var container     = $('.container').width ();
    var emailFooter   = $('#email-footer');
    var hr1Articulo   = $('#hr-1-articulo');
    var mideteDibujo  = $('#midete-dibujo');
    var btnNavCesta   = $('img', $('button'), $('.navegador cesta'));

    if (container == 1140)  return lg (emailFooter, hr1Articulo, mideteDibujo, btnNavCesta);
    if (container == 940)   return md (emailFooter, hr1Articulo, mideteDibujo, btnNavCesta);
    if (container == 720)   return sm (emailFooter, hr1Articulo, mideteDibujo, btnNavCesta);
    return xs (emailFooter, hr1Articulo, mideteDibujo, btnNavCesta);
}

function lg (emailFooter, hr1Articulo, mideteDibujo, btnNavCesta) {

    emailFooter.css ({fontSize: 14});
    hr1Articulo.css ({marginTop: 20});
    mideteDibujo.css ({marginBottom: 20});
    btnNavCesta.css ({marginBottom: 10});
}

function md (emailFooter, hr1Articulo, mideteDibujo, btnNavCesta) {

    emailFooter.css ({fontSize: 14});
    hr1Articulo.css ({marginTop: 20});
    mideteDibujo.css ({marginBottom: 20});
    btnNavCesta.css ({marginBottom: 10});
}

function sm (emailFooter, hr1Articulo, mideteDibujo, btnNavCesta) {

    emailFooter.css ({fontSize: 12});
    hr1Articulo.css ({marginTop: 0});
    mideteDibujo.css ({marginBottom: 20});
    btnNavCesta.css ({marginBottom: 0});
}

function xs (emailFooter, hr1Articulo, mideteDibujo, btnNavCesta) {

    emailFooter.css ({fontSize: 12});
    hr1Articulo.css ({marginTop: 20});
    mideteDibujo.css ({marginBottom: 0});
    btnNavCesta.css ({marginBottom: 0});
}
</script>
